/* Default Textual theme. Keep it simple and readable. */

Screen {
  padding: 1 2;
}

.section_title {
  text-style: bold;
}

.muted {
  color: $text-muted;
}

#home_grid {
  layout: grid;
  grid-size: 2;
  grid-columns: 1fr 1fr;
  grid-rows: auto;
  grid-gutter: 1 2;
}

.card {
  border: solid $panel;
  padding: 1 2;
}

#home_nav {
  dock: bottom;
  height: auto;
  border-top: solid $panel;
  padding: 1 2;
}
